{
    "name": "nestjs-test-containers",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "cross-env NODE_ENV=dev nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "test:it": "jest --config ./test/it/it.jest.json",
        "test:container": "npm run docker:up && wait-on tcp:3307 && npm run migrate:test && npm run seed:test && npm run test user.service.spec.ts && npm run docker:down",
        "docker:up": "docker compose -p e-commerce -f ./docker/kafka-compose.yaml -f ./docker/redis-compose.yaml up -d",
        "docker:down": "docker compose -p e-commerce -f ./docker/kafka-compose.yaml -f ./docker/redis-compose.yaml down",
        "migrate:test": "dotenv -e .env.test -- npx prisma migrate deploy",
        "seed:test": "npx prisma db seed"
    },
    "dependencies": {
        "@nestjs-modules/ioredis": "^2.0.2",
        "@nestjs/common": "^11.0.9",
        "@nestjs/config": "^4.0.0",
        "@nestjs/core": "^11.0.9",
        "@nestjs/cqrs": "^11.0.2",
        "@nestjs/microservices": "^11.0.9",
        "@nestjs/platform-express": "^11.0.9",
        "@nestjs/schedule": "^5.0.1",
        "@nestjs/swagger": "^11.0.3",
        "@nestjs/terminus": "^11.0.0",
        "@nestjs/typeorm": "^11.0.0",
        "@prisma/client": "^6.3.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cross-env": "^7.0.3",
        "dayjs": "^1.11.13",
        "dotenv": "^16.4.7",
        "ioredis": "^5.5.0",
        "kafkajs": "^2.2.4",
        "mysql2": "^3.12.0",
        "npm-check-updates": "^17.1.14",
        "prisma": "^6.3.1",
        "redis": "^4.7.0",
        "redlock": "^5.0.0-beta.2",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "swagger-ui-express": "^5.0.1",
        "typeorm": "^0.3.20",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.2",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.9",
        "@testcontainers/mysql": "^10.18.0",
        "@testcontainers/redis": "^10.18.0",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.4",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.24.0",
        "@typescript-eslint/parser": "^8.24.0",
        "dotenv-cli": "^8.0.0",
        "eslint": "^9.20.1",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.3",
        "jest": "^29.7.0",
        "prettier": "^3.5.1",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "testcontainers": "^10.18.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3",
        "wait-on": "^8.0.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": "^(?!.*it\\.spec\\.ts$).*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "prisma": {
        "seed": "ts-node prisma/seed/init.ts"
    }
}
